  date         = {2016-03},
  journaltitle = {Current Biology},
  title        = {Pleistocene Mitochondrial Genomes Suggest a Single Major Dispersal of Non-Africans and a Late Glacial Population Turnover in Europe},
  doi          = {10.1016/j.cub.2016.01.037},
