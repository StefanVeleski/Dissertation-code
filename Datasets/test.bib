@Article{heath_emotional_2001,
  author       = {Heath, Chip and Bell, Chris and Sternberg, Emily},
  date         = {2001},
  journaltitle = {Journal of Personality and Social Psychology},
  title        = {Emotional Selection in Memes: The Case of Urban Legends},
  doi          = {10.1037/0022-3514.81.6.1028},
